<%- include("partials/header") %>

<nav class="navbar navbar-expand navbar-dark fixed-top">
   <div class="container">
     <div class="navbar-brand float-none">FCC</div>
     <div class="navbar-nav">
       <% if (!currentUser) { %>
         <a class="nav-item nav-link" href="/login"><span class="icon icon-user"></span></a>
       <% } else { %>
         <a class="nav-item nav-link" href="/user"><span class="icon icon-user"></span></a>
       <% } %>
     </div>
   </div>
   </div>
 </nav>
 
 <div class="container">
   <div id="accordion" role="tablist">
     <div class="card bg-inverse">
       <a class="collapsed" data-toggle="collapse" href="#sermonsTab" aria-expanded="true" aria-controls="collapseOne">
         <div class="card-header bg-inverse" role="tab" id="sermonsHeading">
           <h5 class="mb-0">
             Latest Messages
           </h5>
         </div>
       </a>
 
       <div id="sermonsTab" class="collapse" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
         <div class="card-body">
           <iframe src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/214987390&amp;color=0066cc&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false" width="100%" height="450" frameborder="no" scrolling="no" style="max-width: 100%;"></iframe>
         </div>
       </div>
     </div>
     <div class="card bg-inverse">
       <a class="collapsed" data-toggle="collapse" href="#announcementsTab" aria-expanded="true" aria-controls="collapseTwo">
         <div class="card-header bg-inverse" role="tab" id="announcementsHeading">
           <h5 class="mb-0">
             Announcements
           </h5>
         </div>
       </a>
 
       <div id="announcementsTab" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
         <div class="card-body">
           <% announcements.forEach(function(announcement){ %>
             <% if (announcement.isPublished) { %>
               <div class="announce">
                 <div class="announce-banner">
                   <img src="<%= announcement.image %>">
                 </div>
                 <div class="announce-title">
                   <h2><%= announcement.title %></h2>
                 </div>
                 <div class="announce-body">
                   <p><%- announcement.description %></p>
                 </div>
                 <!-- <div class="announce-cta">
                   <a class="btn btn-lg btn-info pull-right" href="" target="_blank">More Info</a>
                 </div> -->
               </div>
             <% } %>
           <% }); %>
         </div>
       </div>
     </div>
     <div class="card bg-inverse">
       <a class="collapsed" data-toggle="collapse" href="#groupsTab" aria-expanded="true" aria-controls="collapseThree">
         <div class="card-header bg-inverse" role="tab" id="groupsHeading">
           <h5 class="mb-0">
             Small Groups
           </h5>
         </div>
       </a>
       <div id="groupsTab" class="collapse" role="tabpanel" aria-labelledby="headingThree" data-parent="#accordion">
         <div class="card-body">
          <% groups.forEach(function(group){ %>
            <% if (group.isPublished) { %>
              <div class="group">
                <div class="group-banner">
                  <img src="<%= group.image %>">
                </div>
                <div class="group-name">
                  <h2><%= group.name %></h2>
                </div>
                <div class="group-body">
                  <p><%- group.description %></p>
                </div>
                <!-- <div class="group-cta">
                  <a class="btn btn-lg btn-info pull-right" href="" target="_blank">More Info</a>
                </div> -->
              </div>
            <% } %>
          <% }); %>
         </div>
       </div>
     </div>
     <div class="card bg-inverse">
       <a class="collapsed" data-toggle="collapse" href="#connectTab" aria-expanded="true" aria-controls="collapseFour">
         <div class="card-header bg-inverse" role="tab" id="connectHeading">
           <h5 class="mb-0">
             Connect With Us
           </h5>
         </div>
       </a>
       <div id="connectTab" class="collapse" role="tabpanel" aria-labelledby="headingFour" data-parent="#accordion">
         <div class="card-body">
           <p>We love hearing from our guests!</p>
 
             <form>
               <div class="form-group">
                 <input class="form-control" type="text" name="name" placeholder="Name">
               </div>
               <div class="form-group">
                 <input class="form-control" type="email" name="email" placeholder="Email">
               </div>
               <div class="form-group">
                 <input class="form-control" type="tel" name="phone" placeholder="Phone">
               </div>
               <textarea class="form-control" name="content" placeholder="Message"></textarea>
               <button class="btn btn-lg btn-primary pull-right" type="submit">Send</button>
             </form>
         </div>
       </div>
     </div>
   </div>
 </div> <!-- </container> -->

<%- include("partials/footer") %>